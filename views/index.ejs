        console.log(models);

        let options = "";
        let modeles = models.models;


        for (const i in modeles.Models) {
          options +=
            `<option data-brand='${brand}' value='${modeles.Models[i].model_name}'>${modeles.Models[i].model_name}</option>`;


        }
            $('.fdl-remove').on('click', function () {
           replaceDatalist();

           

});

        $('#search-car').html(options);




      });






    });

   
  </script>




